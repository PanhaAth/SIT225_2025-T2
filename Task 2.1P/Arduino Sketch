#include <Arduino_LSM6DS3.h>

void setup() {
  Serial.begin(9600);  // Increased baud rate for better performance
  while (!Serial);

  if (!IMU.begin()) {
    Serial.println("IMU error!");
    while (1);  // Halt if IMU fails to initialize
  }
    Serial.println("IMU initialization is successful!");
}

void loop() {
    float x, y, z;

    if (IMU.accelerationAvailable()){
      IMU.readAcceleration(x, y, z);

      Serial.print(x, 4);
      Serial.print(", ");
      Serial.print(y, 4);
      Serial.print(", ");
      Serial.println(z, 4);
    }
  
  delay(1000);  // ~50Hz sampling rate
}
